<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slideswitchview="http://schemas.android.com/apk/res/com.siyuan.utilslibrarydemos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dip"
    tools:context="com.example.testlibs.MainActivity" >

    <com.android.common.baseui.views.SlideSwitchView
        android:id="@+id/swit"
        android:layout_width="150dip"
        android:layout_height="60dip"
        slideswitchview:slideswitchIsOpen="true"
        slideswitchview:slideswitchShape="rect"
        slideswitchview:slideswitchTextOpen="开"
        slideswitchview:slideswitchTextClose="关"
        slideswitchview:slideswitchThemeColor="#ffee3a00" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.android.common.baseui.views.SlideSwitchView
        android:id="@+id/swit2"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_marginTop="10dip"
        slideswitchview:slideswitchIsOpen="true"
        slideswitchview:slideswitchShape="circle"
        slideswitchview:slideswitchTextOpen="开"
        slideswitchview:slideswitchTextClose="关"
        slideswitchview:slideswitchThemeColor="#ff0a5a00" />

    <com.android.common.baseui.views.SlideSwitchView
        android:id="@+id/swit3"
        android:layout_width="20dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        slideswitchview:slideswitchIsOpen="true"
        slideswitchview:slideswitchShape="circle"
        slideswitchview:slideswitchTextOpen="开"
        slideswitchview:slideswitchTextClose="关"
        slideswitchview:slideswitchThemeColor="#ff73aa00" />

    <com.android.common.baseui.views.SlideSwitchView
        android:id="@+id/swit4"
        android:layout_width="100dip"
        android:layout_height="120dip"
        android:layout_marginTop="10dip"
        slideswitchview:slideswitchIsOpen="false"
        slideswitchview:slideswitchShape="circle"
        slideswitchview:slideswitchTextOpen="是"
        slideswitchview:slideswitchTextClose="才不是"
        slideswitchview:slideswitchTextSize="22sp"
        slideswitchview:slideswitchThemeColor="#f200aa96" />

    <com.android.common.baseui.views.SlideSwitchView
        android:id="@+id/swit5"
        android:layout_width="140dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        slideswitchview:slideswitchIsOpen="true"
        slideswitchview:slideswitchShape="rect"
        slideswitchview:slideswitchTextOpen="开"
        slideswitchview:slideswitchTextClose="关"
        slideswitchview:slideswitchThemeColor="#f23331a0" />

</LinearLayout>